<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jiwon.smartlogger.MainActivity">

    // SmartLogger icon
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_weight="0.2"
        android:layout_gravity="center"
        android:src="@drawable/car"/>


    //main information Layout
    /***********************************
    it contains velocity, accleration, gps, emergency signal,
    battery information
    ***********************/

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1">//랠러티브 레이아웃 생성

                <ImageView
                    android:id="@+id/Velocity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle" />
                //이미지뷰 생성

                <TextView
                    android:id="@+id/Velocity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/Velocity"
                    android:layout_alignLeft="@id/Velocity"
                    android:layout_alignRight="@id/Velocity"
                    android:layout_alignTop="@id/Velocity"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="Velocity"
                    android:textColor="#000000" />
                //정렬을 상하좌우 이미지뷰에 맞춘다.

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1">//랠러티브 레이아웃 생성


                <ImageView
                    android:id="@+id/Acceleration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle" />
                //이미지뷰 생성

                <TextView
                    android:id="@+id/Accelation_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/Acceleration"
                    android:layout_alignLeft="@id/Acceleration"
                    android:layout_alignRight="@id/Acceleration"
                    android:layout_alignTop="@id/Acceleration"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="Acceleration"
                    android:textColor="#000000" />
                //정렬을 상하좌우 이미지뷰에 맞춘다.

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1">//랠러티브 레이아웃 생성

                <ImageView
                    android:id="@+id/RPM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle" />
                //이미지뷰 생성

                <TextView
                    android:id="@+id/RPM_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/RPM"
                    android:layout_alignLeft="@id/RPM"
                    android:layout_alignRight="@id/RPM"
                    android:layout_alignTop="@id/RPM"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="RPM"
                    android:textColor="#000000" />
                //정렬을 상하좌우 이미지뷰에 맞춘다.

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1">//랠러티브 레이아웃 생성


                <ImageView
                    android:id="@+id/Battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/circle" />
                //이미지뷰 생성

                <TextView
                    android:id="@+id/Battery_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/Battery"
                    android:layout_alignLeft="@id/Battery"
                    android:layout_alignRight="@id/Battery"
                    android:layout_alignTop="@id/Battery"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="Battery"
                    android:textColor="#000000" />
                //정렬을 상하좌우 이미지뷰에 맞춘다.

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_weight="1">//랠러티브 레이아웃 생성

                <ImageButton
                    android:id="@+id/gpsBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gps" />
                //이미지뷰 생성


            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/relativelayout6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1">//랠러티브 레이아웃 생성


                <ImageView
                    android:id="@+id/driverBtn"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/admistrator"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp" />

                <ImageView
                    android:id="@+id/adminBtn"
                    android:layout_width="100dp"
                    android:layout_height="500dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/driver"
                    android:layout_alignTop="@+id/driverBtn"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    //down tab Layout
    /***********************************
    it contains Introduce(for Koreatech Car club) or Chatting,
    history(for main information), Logout tab
    ***********************/
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >
        <ImageView

            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:src="@drawable/chat"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/historyBtn"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/record"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_gravity="center"/>
        <ImageView

            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/logout"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:layout_gravity="center"/>






    </LinearLayout>

</LinearLayout>
